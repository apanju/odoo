<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_employee_form_leave_inherit2" model="ir.ui.view">
            <field name="name">hr.employee.leave.form.inherit2</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='active_group']" position="before">
                    <group string="Drivers Licence">
                        <field name="drivers_licence_number"/>
                        <field name="drivers_licence_date_from"/>
                        <field name="drivers_licence_date_to"/>
                    </group>
                    <group string="Agreements">
                        <field name="driver_agreement_signed"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>


</openerp>